          <script>
              let mapOptions = {
                  center: [17.385044, 78.486671],
                  zoom: 13
              }
      
              let map = L.map('map', mapOptions),
                  layer = L.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png');
      
              map.addLayer(layer);
      
              let _polyline;
      
              L.Control.geocoder().addTo(map);
      
              async function calculateDistance() {
                  let startPlace = document.getElementById('startPlace').value;
                  let endPlace = document.getElementById('endPlace').value;
      
                  try {
                      let startCoords = await geocodePlace(startPlace);
                      let endCoords = await geocodePlace(endPlace);
      
                      if (startCoords && endCoords) {
                          let distance = startCoords.distanceTo(endCoords);
                          let distanceInKm = distance / 1000; // Convert meters to kilometers
                          document.getElementById('length').innerHTML = "Distance: " + distanceInKm.toFixed(2) + " km";
      
                          // Calculate carbon footprint based on distance
                          let carbonFootprint = calculateCarbonFootprint(distanceInKm);
                          document.getElementById('carbonFootprint').innerHTML = "Carbon Footprint: " + carbonFootprint.toFixed(2) + " kg CO2";
      
                          // Draw a line between the two points
                          if (_polyline) {
                              map.removeLayer(_polyline);
                          }
                          _polyline = L.polyline([startCoords, endCoords], { color: 'red' }).addTo(map);
                          document.querySelector('.leaflet-popup-content').style.color = 'white';
                      }
                    } catch (error) {
                        console.error('Error:', error);
                        // alert('Error calculating distance. Please try again.');
                    }
              }
      
              async function geocodePlace(place) {
                  return new Promise((resolve, reject) => {
                      L.Control.Geocoder.nominatim().geocode(place, results => {
                          if (results && results.length > 0) {
                              let latlng = L.latLng(results[0].center.lat, results[0].center.lng);
                              resolve(latlng);
                          } else {
                              reject('Place not found');
                          }
                      });
                  });
              }
      
              // Function to calculate carbon footprint based on distance
              function calculateCarbonFootprint(distanceInKm) {
                  // Placeholder carbon footprint calculation
                  // This is just a simple example, you may need to replace it with a more accurate calculation
                  return (distanceInKm * 0.5)+40; // Assuming a carbon footprint of 0.1 kg CO2 per kilometer
              }
